{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2016",
    "lib": ["es5", "es2015", "es2016.array.include", "esnext.asynciterable"],
    "noImplicitAny": true,
    "strictNullChecks": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": "./src",
    "typeRoots": ["./node_modules/@types", "./src/types"],
    "rootDirs": ["src/"],
    "types": ["node", "jest"],
    "esModuleInterop": true
  },
  "exclude": ["./node_modules/*"],
  "include": ["src/**/*"]
}
